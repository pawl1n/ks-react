---
import Sidebar from "../components/admin/sidebar/Sidebar";
import Profile from "../types/Profile";

const { title } = Astro.props;
const currentPath = Astro.url.pathname;

const links: string[] = await fetch("http://localhost:8080/profile")
  .then((res) => res.json() as Promise<Profile>)
  .then((data) => {
    const paths: string[] = [];
    for (const key in data._links) {
      if (key === "self") continue;
      paths.push(key);
    }
    return paths;
  });
---

<html lang="uk" class="h-full">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#222222" />
    <link rel="apple-touch-icon" href="/logo.png" />
    <title>{title}</title>
  </head>
  <body class="flex h-full bg-white dark:bg-stone-800">
    <Sidebar currentPath={currentPath} links={links} />
    <div class="flex flex-col flex-1">
      <slot />
    </div>
  </body>
</html>
